{
  "name": "beep-sdk-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @beep-it/sdk-core build && pnpm --filter \"./packages/*\" build",
    "test": "pnpm --filter \"./packages/*\" test",
    "build:cli": "pnpm --filter @beep-it/sdk-core build && pnpm --filter @beep-it/sdk-core run pack && pnpm --filter @beep-it/cli build",
    "release": "node scripts/prepare-release.js",
    "lint": "pnpm --filter \"./packages/*\" run lint",
    "dev": "pnpm --filter \"./packages/*\" run dev --parallel",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx}\""
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pnpm": "10.25.0",
    "prettier": "^3.8.0",
    "typescript": "^5.5.3"
  },
  "pnpm": {
    "overrides": {
      "valibot": "1.2.0",
      "axios": "1.12.0",
      "esbuild": "0.25.0",
      "js-yaml": "4.1.1",
      "body-parser": "2.2.1"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.25.0"
}
