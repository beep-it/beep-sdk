{
  "name": "beep-sdk",
  "version": "0.1.0",
  "description": "Official TypeScript SDK for the BEEP Payment and Invoice Server",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "npm run build --if-present -- --no-dts"
    ]
  },
  "keywords": [
    "beep",
    "sdk",
    "payment",
    "invoice",
    "solana",
    "mcp"
  ],
  "author": "BEEP Engineering",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beep/beep-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/beep/beep-sdk/issues"
  },
  "homepage": "https://github.com/beep/beep-sdk",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "axios-mock-adapter": "^1.22.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "ts-jest": "^29.4.0",
    "tsup": "^8.2.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "axios": "^1.7.2"
  }
}
