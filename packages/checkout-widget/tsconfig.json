{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": false,
    "composite": false,
    "sourceMap": true,
    "declarationMap": false,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "paths": {
      "@beep-it/sdk-core": ["../core/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
