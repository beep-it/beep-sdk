{
  "name": "@beep-it/checkout-widget",
  "version": "0.1.5",
  "description": "React component for BEEP merchant payments with QR code display",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "examples"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup --config tsup.lib.config.ts",
    "build:showcase": "tsup --config tsup.config.ts",
    "dev": "npm run build:showcase && cp showcase.html index.html && npx serve . -p 8090",
    "dev:watch": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm run lint && pnpm test && pnpm run build"
  },
  "keywords": [
    "beep",
    "merchant",
    "widget",
    "react",
    "payment",
    "qr-code",
    "solana",
    "solana-pay",
    "checkout",
    "crypto",
    "blockchain",
    "web3"
  ],
  "author": "BEEP Engineering",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beep-it/beep-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/beep-it/beep-sdk/issues"
  },
  "homepage": "https://github.com/beep-it/beep-sdk",
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@beep-it/sdk-core": "^0.1.6",
    "@dynamic-labs/sdk-react-core": "4.32.0",
    "@dynamic-labs/sui": "4.32.0",
    "@mysten/sui": "1.24.0",
    "@tanstack/react-query": "^5.87.1",
    "qrcode": "^1.5.3",
    "qrcode.react": "^4.2.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.10",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/validator": "^13.15.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serve": "^14.2.0",
    "ts-jest": "^29.4.0",
    "tsup": "^8.2.2",
    "typescript": "^5.5.3"
  }
}
