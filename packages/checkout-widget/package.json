{
  "name": "@beep-it/checkout-widget",
  "version": "0.1.0-beta.1",
  "description": "React component for BEEP merchant payments with QR code display",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --no-dts",
    "build:showcase": "tsup --config tsup.config.ts",
    "dev": "npm run build:showcase && npx serve . -p 8090",
    "dev:watch": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "beep",
    "merchant",
    "widget",
    "react",
    "payment",
    "qr-code"
  ],
  "author": "BEEP Engineering",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beep-it/beep-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/beep-it/beep-sdk/issues"
  },
  "homepage": "https://github.com/beep-it/beep-sdk",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@beep-it/sdk-core": "^0.1.0-beta.0",
    "qrcode": "^1.5.3",
    "react-qr-code": "^2.0.18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.10",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serve": "^14.2.0",
    "ts-jest": "^29.4.0",
    "tsup": "^8.2.2",
    "typescript": "^5.5.3"
  }
}
